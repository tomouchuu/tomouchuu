---
import twitter from 'twitter-text';
import {formatDistanceToNow} from 'date-fns';

import {FontAwesomeIcon} from '@fortawesome/react-fontawesome';
import {faTwitter} from '@fortawesome/free-brands-svg-icons';

const response = await fetch("https://api-tomo.uchuu.io/api/me",
  {
    method: 'POST',
    headers: {'Content-Type':'application/json'},
    body: JSON.stringify({
      query: `
				query {
					twitter {
            user {
              screen_name
              status {
                created_at
                id_str
                full_text
              }
            }
          }
				}
			`,
    }),
  }
);

const json = await response.json();
const { data: { twitter: { user: tweet } } } = json;

interface Tweet {
  screen_name: string
  status: {
    created_at: string
    id_str: string
    full_text: string
  }
}

const text = (text: string) => {
  return twitter.autoLink(text);
}

const relativedate = (time: string) => {
  return formatDistanceToNow(new Date(time), {addSuffix: true});
}

const statusurl = (tweet: Tweet) => {
  return `https://twitter.com/${tweet.screen_name}/status/${tweet.status.id_str}`;
}

---
<p class="my-2 text-lg">
  <a href={statusurl(tweet)} title={relativedate(tweet.status.created_at)} target="_blank" rel="noopener"><FontAwesomeIcon icon={faTwitter} size="lg" fixedWidth className="mr-1" /></a>
  <span set:html={text(tweet.status.full_text)} />
</p>